{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {
      "dependsOn": ["^test"],
      "inputs": [
        "src/**/*.spec.tsx",
        "src/**/*.test.tsx",
        "src/**/*.spec.ts",
        "test/**/*.ts",
        "test/**/*.json"
      ]
    },
    "type-check": {}
  }
}
